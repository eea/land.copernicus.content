    </class>

    <class class="Products.PloneHelpCenter.types.FAQFolder.HelpCenterFAQFolder">
      <implements interface="Products.CMFPlone.interfaces.INonStructuralFolder" />
    </class>

    <class class="Products.PloneHelpCenter.types.Glossary.HelpCenterGlossary">
