<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      lang="en-US"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">

<body>
  <metal:description fill-slot="content-description" />

  <metal:content-core fill-slot="content-core">
    <metal:main_macro define-macro="content-core">

      <div class="radio">
        <label><input type="radio" name="optradio" checked>
          Yes, I would like to be informed by e-mail about the new and updated
          products of the Copernicus Land Monitoring Service, events and training
          opportunities.
        </label>
      </div>
      <div class="radio">
        <label><input type="radio" name="optradio">
          No, I don't want to be contacted.
        </label>
      </div>

      <button class="btn btn-default">Save</button>
      <button class="btn btn-warning">Cancel</button>
    </metal:main_macro>
  </metal:content-core>
</body>
</html>
